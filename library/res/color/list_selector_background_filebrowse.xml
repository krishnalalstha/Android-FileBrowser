<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_window_focused="false"><shape>
            <solid android:color="#ebebeb" />
        </shape></item>
    <item android:state_pressed="true" android:state_selected="true"><shape>
            <gradient android:angle="270" android:centerColor="#f06600" android:endColor="#f89f44" android:radius="1dip" android:startColor="#ef8433" />
        </shape></item>
    <item android:state_pressed="true" android:state_selected="false"><shape>
            <gradient android:angle="270" android:centerColor="#f06600" android:endColor="#f89f44" android:radius="1dip" android:startColor="#ef8433" />
        </shape></item>
    <item android:state_selected="true"><shape>
            <gradient android:angle="270" android:centerColor="#f06600" android:endColor="#f89f44" android:radius="1dip" android:startColor="#ef8433" />

            <stroke android:width="2dip" android:color="#ef8839" />
        </shape></item>

</selector>